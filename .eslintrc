{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true,
    "mocha": true,
    "node": true,
    "serviceworker": true,
    "shared-node-browser": true
  },
  "extends": ["plugin:react/recommended"],
  "globals": {
    "React": true
  },
  "parser": "espree",
  "parserOptions": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "defaultParams": true,
      "jsx": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // best practices
    "consistent-return": 2,
    "curly": [2, "multi-line"],
    "dot-notation": [2, {
      "allowKeywords": true
    }],
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-extend-native": 2,
    "no-floating-decimal": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 1,
    "no-param-reassign": [2, {"props": true}],
    "no-proto": 2,
    "no-redeclare": 2,
    "no-with": 2,
    "vars-on-top": 2,
    "wrap-iife": [2, "any"],
    "yoda": 2,  

    // es6
    "no-var": 2,
    "no-const-assign": 2,
    "arrow-spacing": 2,
    "arrow-parens": ["error", "as-needed"],

    // possible errors
    "comma-dangle": [2, "never"],
    "no-alert": 1,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "block-scoped-var": 2,

    // strict mode
    "strict": [2, "never"],

    // style
    "indent": [1, 4],
    "brace-style": [2, "1tbs", {
      "allowSingleLine": true
    }],
    "quotes": [
      2, "single", "avoid-escape"
    ],
    "camelcase": [2, {
      "properties": "never"
    }],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "comma-style": [2, "last"],
    "eol-last": 2,
    "func-names": 1,
    "key-spacing": [2, {
        "beforeColon": false,
        "afterColon": true
    }],
    "new-cap": [2, {
      "newIsCap": true
    }],
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-nested-ternary": 2,
    "no-spaced-func": 2,
    "no-extra-parens": [2, "functions"],
    "no-underscore-dangle": 0,
    "one-var": [2, "never"],
    "padded-blocks": [2, "never"],
    "semi": [2, "always"],
    "semi-spacing": [2, {
      "before": false,
      "after": true
    }],
    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "always"],
    "space-infix-ops": 2,
    "spaced-comment": [2, "always", {
      "exceptions": ["-", "+"],
      "markers": ["=", "!"]
    }],

    // variables
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-unused-vars": [2, {
      "vars": "local",
      "args": "after-used"
    }],
    "no-use-before-define": 2,
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    }
  }
}
